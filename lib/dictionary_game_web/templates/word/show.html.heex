<h1>Show Word</h1>

<ul>

  <li>
    <strong>Part of speech:</strong>
    <%= @word.part_of_speech %>
  </li>

  <li>
    <strong>Word:</strong>
    <%= @word.word %>
  </li>

  <li>
    <strong>Definition:</strong>
    <%= @definition.definition %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.word_path(@conn, :edit, @word) %></span> |
<span><%= link "Back", to: Routes.word_path(@conn, :index) %></span>
