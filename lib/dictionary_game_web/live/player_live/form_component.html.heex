<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="player-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name, "Player Name" %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
    
    <div>
      <%= submit "Ready", phx_disable_with: "Joining..." %>
    </div>
  </.form>
</div>
